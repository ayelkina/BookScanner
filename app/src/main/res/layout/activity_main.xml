<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.MainActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp" app:srcCompat="@drawable/green_background"
            android:id="@+id/backgroundView"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/search_red"
            android:id="@+id/searchButton"
            android:background="@null" android:scaleType="fitXY"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/backgroundView" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/searchInputText" android:layout_marginBottom="8dp"
            android:onClick="searchBtnClicked"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/searchInputText" android:hint="@string/search_for_a_book"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/searchButton"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/backgroundView" android:textColorLink="@android:color/black"/>
    <ImageButton
            android:layout_width="155dp"
            android:layout_height="102dp" app:srcCompat="@drawable/photo"
            android:id="@+id/bookView"
            android:background="@android:color/transparent"
            android:scaleType="fitXY" android:onClick="cameraBtnClicked" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchInputText"
            app:layout_constraintVertical_bias="0.418"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="@+id/textView"
            android:layout_marginLeft="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textView"/>
    <ImageButton
            android:layout_width="150dp"
            android:layout_height="110dp" app:srcCompat="@drawable/books_"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:onClick="libraryClicked"
            android:scaleType="fitXY" android:adjustViewBounds="false"
            android:cropToPadding="false" android:background="@android:color/transparent"
            android:id="@+id/shelfBtn"
            app:layout_constraintTop_toTopOf="@+id/bookView"
            app:layout_constraintBottom_toBottomOf="@+id/bookView"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.6"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/oh_hi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/helloText"
            android:textSize="36sp"
            android:textColor="@android:color/black"
            tools:text="BookScanner" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/lionIcon" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/backgroundView" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Search by photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/bookView"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    <TextView
            android:text="Your shelf"
            android:layout_width="108dp"
            android:layout_height="26dp"
            android:id="@+id/textView2"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="36dp" android:layout_marginRight="36dp"
            app:layout_constraintTop_toTopOf="@+id/textView"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/lion"
            android:id="@+id/lionIcon" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundView" android:visibility="visible"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>