<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/blue_gradient"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageButton
            android:layout_width="49dp"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/backBtn"
            app:layout_constraintStart_toStartOf="@+id/toolbar"
            android:adjustViewBounds="false"
            android:cropToPadding="false" android:onClick="backBtnClicked"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@+id/toolbar" app:layout_constraintBottom_toBottomOf="@+id/toolbar"/>
</android.support.constraint.ConstraintLayout>